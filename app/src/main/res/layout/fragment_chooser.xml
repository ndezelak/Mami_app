<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:layout_gravity="bottom|center"
    tools:context="com.nejc.mamiapp.fragments_and_adapters.ChooserFragment"
    android:background="@drawable/popup_okno"

    >

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        app:rowCount="3"
        android:layout_marginBottom="100dp"
        android:stretchMode="columnWidth">
       <FrameLayout
           android:layout_width="0dp"
           android:layout_height="0dp"
           app:layout_column="0"
           app:layout_row="0"
           app:layout_rowWeight="1"
           app:layout_columnWeight="1"
           android:layout_margin="10dp">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:id="@+id/dop_sank_big"
               android:src="@drawable/dop_sank_big"
               />
       </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="10dp">>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dop_kuh_big"
                android:src="@drawable/dop_k_big"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="10dp">>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pop_sank_big"
                android:src="@drawable/pop_sank_big"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="10dp">>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pop_kuh_big"
                android:src="@drawable/pop_k_big"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_column="0"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="10dp">>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dopust_big"
                android:src="@drawable/dopust_big"
            />
    </FrameLayout>
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="0dp"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_columnWeight="1"
            android:layout_margin="10dp">>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prosto_big"
                android:src="@drawable/prosto_big"
                />
        </FrameLayout>



    </android.support.v7.widget.GridLayout>







</FrameLayout>
